<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_pos_config_fiscal_recorder" model="ir.ui.view">
            <field name="name">Pos Config Fiscal Recorder</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='posbox_reference']" position="inside">
                    <div id="fiscal_printer" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Fiscal Recorder</span>
                            <div class="content-group mt16">
                                <field name="fiscal_recorder"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_pos_config_fiscal_recorder_kanban" model="ir.ui.view">
            <field name="name">Pos Config Fiscal Recorder Kanban</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_kanban_card_manage_pane')]/div[1]" position="inside">
                    <field name="fiscal_recorder" invisible="1"/>
                    <div class="col-6 o_kanban_card_manage_section o_kanban_manage_view"
                         attrs="{'invisible': [('fiscal_recorder','=', False)]}">
                        <div role="menuitem" class="o_kanban_card_manage_title">
                            <span>Fiscal Reports</span>
                            <field name="box_with_fiscal" invisible="1"/>
                            <field name="box_fiscal_ip" invisible="1"/>
                        </div>
                        <div role="menuitem">
                            <a name="print_z_report" type="object" id="z-report">Print Z-Report</a>
                        </div>
                        <div role="menuitem">
                            <a name="print_x_report" type="object" id="x-report">Print X-Report</a>
                        </div>
                        <div role="menuitem">
                            <a name="print_product_x_report" type="object" id="product-x-report">Print Product
                                X-Report
                            </a>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_pos_session_fiscal_recorder_form" model="ir.ui.view">
            <field name="name">Pos Session Fiscal Recorder Reports</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">
                <field name="config_id" position="after">
                    <field name="show_reports" invisible="1"/>
                    <field name="box_with_fiscal" invisible="1"/>
                    <field name="box_fiscal_ip" invisible="1"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
